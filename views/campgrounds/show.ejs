<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/start-rating.css" />
<link rel="stylesheet" href="/css/app.css" />

<div class="row campground__wrapper">
	<div class="col-12">
		<!-- for map to be rendered -->
		<div id="map" class="rounded-2"></div>

		<div class="card my-3">
			<div
				id="carouselExampleControls"
				class="carousel slide"
				data-bs-ride="carousel"
			>
				<div class="carousel-inner">
					<% campground.images.forEach((img, i)=>{ %>
					<div class="carousel-item <%= i===0?'active':'' %>">
						<img src="<%= img.url  %>" class="d-block w-100" alt="..." />
					</div>
					<% }) %>
				</div>
				<% if(campground.images.length > 1){ %>
				<button
					class="carousel-control-prev"
					type="button"
					data-bs-target="#carouselExampleControls"
					data-bs-slide="prev"
				>
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button
					class="carousel-control-next"
					type="button"
					data-bs-target="#carouselExampleControls"
					data-bs-slide="next"
				>
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
				<% } %>
			</div>
			<div class="card-body">
				<h5 class="card-title"><%= campground.title %></h5>
				<h6 class="card-subtitle mb-2 text-muted">
					<%= campground.location %>
				</h6>
				<p class="card-text">Posted by : <%= author %></p>
				<p class="card-text"><%= campground.description %></p>
				<p class="card-text">$<%= campground.price %>/night</p>

				<div class="d-flex justify-content-between align-items-center">
					<div>
						<a href="/campgrounds" class="text-decoration-none"
							><i class="bi bi-arrow-left"></i>
						</a>
					</div>
					<% if(loggedInUser && loggedInUser._id.equals(campground.author._id)){
					%>
					<div>
						<a
							class="card-link btn btn-light text-success"
							href="/campgrounds/<%= campground._id %>/edit"
							><i class="bi bi-pencil-square"></i
						></a>
						<form
							class="d-inline"
							action="/campgrounds/<%= campground._id  %>?_method=DELETE"
							method="POST"
						>
							<button class="btn btn-btn-light text-danger" type="submit">
								<i class="bi bi-archive"></i>
							</button>
						</form>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<div class="col-12">
		<% if(loggedInUser){%>
		<h2 class="mb-3 fs-4">Leave us your Review</h2>

		<form
			action="/campgrounds/<%=campground._id%>/reviews"
			method="post"
			class="validated-form"
			novalidate
		>
			<%#
			<div class="mb-3">
				<label for="rating" class="form-lable">Rating</label>
				<input
					type="range"
					name="review[rating]"
					id="rating"
					min="1"
					max="5"
					class="form-range"
				/>
			</div>
			%>
			<div class="mb-3">
				<fieldset class="starability-basic">
					<input
						type="radio"
						id="no-rate"
						class="input-no-rate"
						name="review[rating]"
						value="1"
						checked
						aria-label="No rating."
					/>
					<input
						type="radio"
						id="first-rate1"
						name="review[rating]"
						value="1"
					/>
					<label for="first-rate1" title="Terrible">1 star</label>
					<input
						type="radio"
						id="first-rate2"
						name="review[rating]"
						value="2"
					/>
					<label for="first-rate2" title="Not good">2 stars</label>
					<input
						type="radio"
						id="first-rate3"
						name="review[rating]"
						value="3"
					/>
					<label for="first-rate3" title="Average">3 stars</label>
					<input
						type="radio"
						id="first-rate4"
						name="review[rating]"
						value="4"
					/>
					<label for="first-rate4" title="Very good">4 stars</label>
					<input
						type="radio"
						id="first-rate5"
						name="review[rating]"
						value="5"
					/>
					<label for="first-rate5" title="Amazing">5 stars</label>
				</fieldset>
			</div>
			<div class="mb-3">
				<label for="body" class="form-label">My Review</label>
				<textarea
					name="review[body]"
					id="body"
					rows="3"
					class="form-control"
					required
				></textarea>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="d-flex justify-content-end">
				<button class="btn btn-success">Submit</button>
			</div>
		</form>

		<%}%> <% if(campground.reviews.length){%> <% if(campground.reviews.length >
		1){%>
		<h2 class="fs-5">Reviews</h2>
		<%}else{%>
		<h2 class="fs-5">Review</h2>
		<%}%> <%}%> <% for (let review of campground.reviews){ %>
		<div class="card mb-3 mt-3">
			<div class="card-body">
				<h5 class="card-title fs-6">
					<%= review.author?.username||'Unknown'%>
				</h5>

				<p class="starability-result" data-rating="<%= review.rating %>">
					Rated: 3 stars
				</p>

				<p class="card-text"><%= review.rating%></p>

				<p class="card-text">Review: <%= review.body %></p>

				<% if(loggedInUser && loggedInUser._id.equals(review.author?._id)){ %>
				<form
					action="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>?_method=DELETE"
					method="POST"
				>
					<button class="btn btn-sm btn-white text-danger">
						<i class="bi bi-archive"></i>
					</button>
				</form>
				<% } %>
			</div>
		</div>
		<% } %>
	</div>
</div>

<script>
	const mapToken = '<%- process.env.MAPBOX_TOKEN %>';


	const campgroundCopy = <%- JSON.stringify(campground) %>;

	let campground = JSON.stringify(campgroundCopy, replacer);

	function replacer(key, value) {
		if (typeof value === 'string') {
			// Escape single and double quotes with backslashes
			return value.replace(/['"]/g, '\\$&');
		} else if (typeof value === 'object') {
			// Recursively call the replacer for nested objects
			for (const nestedKey in value) {
				value[nestedKey] = replacer(nestedKey, value[nestedKey]);
			}
		}

		return value;
	}
</script>

<script src="/js/showMap.js"></script>
