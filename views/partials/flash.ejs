<% if(success && success[0]){%>
<div
	class="alert alert-success alert-dismissible fade show mt-4 mb-0 col-12 col-md-6 offset-md-3"
	role="alert"
>
	<%= success %>
	<button
		type="button"
		class="btn-close"
		data-bs-dismiss="alert"
		aria-label="Close"
	></button>
</div>
<%} %>

<!-- for error -->
<% if(error && error[0]){%>
<div
	class="alert alert-danger alert-dismissible fade show mt-4 mb-0 col-12 col-md-6 offset-md-3"
	role="alert"
>
	<%= error %>
	<button
		type="button"
		class="btn-close"
		data-bs-dismiss="alert"
		aria-label="Close"
	></button>
</div>
<%} %>
